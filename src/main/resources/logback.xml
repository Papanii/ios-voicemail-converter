<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property for log directory -->
    <property name="LOG_DIR" value="${user.home}/.voicemail-converter/logs"/>
    <property name="LOG_FILE" value="voicemail-converter"/>

    <!-- Console appender for stderr -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>[%level] %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- Console appender for verbose mode (all levels) -->
    <appender name="VERBOSE_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>[%level] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for detailed logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%logger{36}] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>${LOG_DIR}/${LOG_FILE}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 10 days of logs -->
            <maxHistory>10</maxHistory>
            <!-- Total size cap at 100MB -->
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Root logger configuration -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Application-specific logger -->
    <logger name="com.voicemail" level="DEBUG"/>

    <!-- Suppress verbose third-party logging -->
    <logger name="org.apache" level="WARN"/>
    <logger name="org.sqlite" level="WARN"/>
</configuration>
